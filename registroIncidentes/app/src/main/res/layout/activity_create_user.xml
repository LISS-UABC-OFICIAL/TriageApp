<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#E9F1F5">

    <include
        android:id="@+id/toolbarMn"
        layout="@layout/toolbar"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="2dp"
        android:background="@drawable/fondo_rectangular">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvEspera"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="Crear Usuario"
            android:textAlignment="center"
            android:textColor="#127BCB"
            android:textSize="18sp"
            android:textStyle="bold" />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Usuario:"
            android:textColor="#094886"
            android:textSize="16dp"
            android:layout_marginTop="10dp"
            />

        <EditText
            android:id="@+id/etUserName"
            android:layout_width="370dp"
            android:layout_height="45dp"
            android:textColorHint="#B47BA2A8"
            android:inputType="text"
            android:background="@drawable/fondo_redondeado"
            android:drawableLeft="@drawable/ic_icon_siren"
            android:drawablePadding="10dp"
            android:textSize="16dp"
            android:layout_marginTop="6dp"
            android:textColor="#127BCB"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre Completo:"
            android:textColor="#094886"
            android:textSize="16dp"
            android:layout_marginTop="10dp" />

        <EditText
            android:id="@+id/etUserFullName"
            android:layout_width="370dp"
            android:layout_height="45dp"
            android:textColorHint="#B47BA2A8"
            android:inputType="text"
            android:background="@drawable/fondo_redondeado"
            android:drawableLeft="@drawable/ic_icono_doctor"
            android:drawablePadding="10dp"
            android:textSize="16dp"
            android:layout_marginTop="6dp"
            android:textColor="#127BCB"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Correo Electronico:"
            android:textColor="#094886"
            android:textSize="16dp"
            android:layout_marginTop="10dp" />

        <EditText
            android:id="@+id/etUserMail"
            android:layout_width="370dp"
            android:layout_height="45dp"
            android:textColorHint="#B47BA2A8"
            android:inputType="text"
            android:background="@drawable/fondo_redondeado"
            android:drawableLeft="@drawable/ic_icon_mail"
            android:drawablePadding="10dp"
            android:textSize="16dp"
            android:layout_marginTop="6dp"
            android:textColor="#127BCB"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ContraseÃ±a:"
            android:textColor="#094886"
            android:textSize="16dp"
            android:layout_marginTop="10dp" />

        <EditText
            android:id="@+id/etUserPass"
            android:layout_width="370dp"
            android:layout_height="45dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/fondo_redondeado"
            android:drawableLeft="@drawable/ic_icono_contra"
            android:drawablePadding="10dp"
            android:inputType="textPassword"
            android:textColor="#127BCB"
            android:textColorHint="#B47BA2A8"
            android:textSize="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dependencia del Usuario:"
            android:textColor="#094886"
            android:textSize="16dp"
            android:layout_marginTop="10dp" />

        <Spinner
            android:id="@+id/idSpinner"
            android:layout_width="370dp"
            android:layout_height="45dp"
            android:layout_marginTop="6dp"
            android:spinnerMode="dropdown"
            android:background="@drawable/spinner_fondo"
            android:popupBackground="@drawable/fondo_redondeado"
            android:textColor="#127BCB"
            android:foregroundTint="#127BCB" />


        <ImageView
            android:id="@+id/btnSaveUser"
            android:layout_width="238dp"
            android:layout_height="44dp"
            android:layout_gravity="center"
            android:onClick="InsertUser"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="151dp"
            tools:layout_editor_absoluteY="208dp"
            android:background="@drawable/ic_icono_ingresar"
            android:layout_marginTop="23dp"/>



    </LinearLayout>

</LinearLayout>